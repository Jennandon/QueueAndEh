<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_dark">

    <Button
        android:text="start again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_over"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:fontFamily="monospace"
        android:layout_alignBaseline="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_toRightOf="@+id/back"
        android:layout_toEndOf="@+id/back" />

    <Button
        android:text="go back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        style="@android:style/Widget.Material.Button.Borderless.Colored"
        android:fontFamily="monospace"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/decision_image"
        android:layout_alignStart="@+id/decision_image"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="35dp" />


    <TextView
        android:text="SAMPLE TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/decisionText"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_marginBottom="28dp"
        android:fontFamily="monospace"
        android:layout_above="@+id/start_over"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/decision_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/link1"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/decisionText"
        android:layout_centerHorizontal="true" />
</RelativeLayout>